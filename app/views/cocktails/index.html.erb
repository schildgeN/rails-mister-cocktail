<h1 class="title py-4"> Coqtails </h1>
  <div class="d-flex justify-content-center">

    <form class="form-inline my-4 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search for a Coqtail" aria-label="Search" id="search-bar">
      <!-- <button class="btn btn-outline-dark my-4 my-sm-0" type="submit">Search for a coqtail</button> -->
    </form>

  </div>

<div class="text-center h2-group">
  <h2 id="hof" style="display: inline-block;"> Hall of Fame </h2>
  <h2 style="display: inline-block;"> | </h2>
  <h2 id="allc" style="display: inline-block;"> All Coqtails </h2>
</div>

  <div class="row justify-content-around" id="hof-card">
  <% @cocktails.each do |c| %>
    <div class="card my-4 card-cocktail" style="width: 18rem; border-radius: 10px;">
    <img class="card-img-top" src="<%= c.image %>" alt="Card image cap" style="border-top-right-radius: 10px; border-top-left-radius: 10px;">
      <div class="card-body">
        <h5 class="card-title"><%= c.name %></h5>
        <p class="card-text"><em>by User#X</em></p>
        <%= link_to "Ingredients & doses", cocktail_path(c.id), class: "btn btn-outline-dark my-2 ml-2 my-sm-0"%>
      </div>
    </div>
  <% end %>
  </div>
